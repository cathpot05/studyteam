<UserControl x:Class="SampleSystem.Notifications"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SampleSystem"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid Background="LightSlateGray">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0 0 0 0">
            <TextBlock Text="Notifications:" FontFamily="Century Gothic" FontWeight="Bold" Foreground="Red"/>
            <TextBlock x:Name="txtUnreturnedbook" Text="No Data" FontFamily="Century Gothic" FontSize="10"/>
            <TextBlock x:Name="txtoutOfstock" Text="No Data" FontFamily="Century Gothic" FontSize="10"/>
            <TextBlock Text="No Data" FontFamily="Century Gothic" FontSize="10"/>
        </StackPanel>
    </Grid>
</UserControl>
